<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netcoreapp3.1</TargetFrameworks>
    <Nullable>enable</Nullable>
    <Version>0.1.0</Version>
    <Authors>Sergey Volkov</Authors>
    <Product Condition="'$(TargetFramework)' == 'netstandard2.1'">Booru .NET (.NET Standard 2.1)</Product>
    <Product Condition="'$(TargetFramework)' == 'netcoreapp3.1'">Booru .NET (.NET Core 3.1)</Product>
    <Description>A simple library for fetching posts from boorus (Danbooru, Gelbooru, etc.).</Description>
    <Copyright>Copyright (c) 2020 Sergey Volkov</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Easy.Common" Version="3.8.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="System.Collections.Immutable" Version="1.7.0" />
    <PackageReference Include="System.Text.Json" Version="4.7.0" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="4.11.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\ErrorMessages.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ErrorMessages.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\PostUris.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>PostUris.resx</DependentUpon>
    </Compile>
    <Compile Update="Resources\RequestUris.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>RequestUris.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\ErrorMessages.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ErrorMessages.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\PostUris.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>PostUris.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\RequestUris.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>RequestUris.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
