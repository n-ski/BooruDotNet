<Application
    x:Class="ImageSearch.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/MainView.xaml"
    Startup="Application_Startup">

    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary
                    Source="./Assets/Resources.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/Button.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
