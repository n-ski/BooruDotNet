<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ImageSearch.WPF.Converters">

    <!--#region Margins-->

    <Thickness
        x:Key="MarginSmall"
        Bottom="2"
        Left="2"
        Right="2"
        Top="2" />

    <Thickness
        x:Key="MarginMedium"
        Bottom="4"
        Left="4"
        Right="4"
        Top="4" />
    <!--#endregion-->

    <converters:BitmapToNativeConverter
        x:Key="BitmapToNativeConverter" />

    <!--#region Bitmap icons-->

    <BitmapImage
        x:Key="AppIcon"
        UriSource="./Images/AppIcon.ico" />

    <BitmapImage
        x:Key="IqdbIcon"
        DecodePixelHeight="16"
        DecodePixelWidth="16"
        UriSource="./Images/AppIcon.ico" />

    <BitmapImage
        x:Key="DanbooruIcon"
        UriSource="./Images/Danbooru.ico" />

    <BitmapImage
        x:Key="GelbooruIcon"
        UriSource="./Images/Gelbooru.png" />
    <!--#endregion-->

    <!--#region Vector icons-->

