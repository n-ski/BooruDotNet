    <!--#region Shadow effects-->

    <DropShadowEffect
        x:Key="MouseOverShadow"
        BlurRadius="8"
        Opacity="0"
        RenderingBias="Performance"
        ShadowDepth="0"
        Color="#7ddd" />

    <DropShadowEffect
        x:Key="FaviconShadow"
        BlurRadius="8"
        RenderingBias="Performance"
        ShadowDepth="0"
        Color="#7ddd" />
