<rui:ReactiveUserControl
    x:Class="ImageSearch.WPF.Views.QueueItemStatusView"
    x:TypeArguments="vm:QueueItemStatusViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:ImageSearch.ViewModels;assembly=ImageSearch.Core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Progress -->
        <Viewbox
            x:Name="ProcessingIcon"
            Grid.Column="0"
            Width="16"
            Height="16"
            Margin="{StaticResource MarginMedium}"
            Child="{StaticResource StatusProcessingIcon}" />

        <!-- Complete icon -->
        <Viewbox
            x:Name="CompleteIcon"
            Grid.Column="0"
            Width="16"
            Height="16"
            Margin="{StaticResource MarginMedium}"
            Child="{StaticResource StatusCompleteIcon}" />

        <!-- Error -->
        <Viewbox
            x:Name="ErrorIcon"
            Grid.Column="0"
            Width="16"
            Height="16"
            Margin="{StaticResource MarginMedium}"
            Child="{StaticResource StatusErrorIcon}" />

        <TextBlock
            x:Name="StatusText"
            Grid.Column="1"
            MaxHeight="20"
            Margin="{StaticResource MarginMedium}"
            FontStyle="Italic"
            TextTrimming="CharacterEllipsis" />

        <Button
            x:Name="RetryButton"
            Grid.Column="2"
            Margin="{StaticResource MarginMedium}"
            Style="{x:Null}">

            <Viewbox
                Width="16"
                Height="16"
                Child="{StaticResource RetryIcon}" />
        </Button>
    </Grid>
</rui:ReactiveUserControl>
