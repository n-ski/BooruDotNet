<rui:ReactiveWindow
    x:Class="ImageSearch.WPF.Views.MainView"
    x:TypeArguments="vm:MainViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:views="clr-namespace:ImageSearch.WPF.Views"
    xmlns:vm="clr-namespace:ImageSearch.ViewModels;assembly=ImageSearch.Core"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="IQDB Image Search"
    Width="800"
    Height="450"
    Icon="{StaticResource IqdbIcon}"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <xctk:BusyIndicator
        x:Name="BusyIndicator"
        DisplayAfter="0"
        ProgressBarStyle="{StaticResource CollapsedProgressBar}">

        <xctk:BusyIndicator.BusyContentTemplate>

            <DataTemplate>

                <rui:ViewModelViewHost
                    ViewModel="{Binding Mode=OneWay}" />
            </DataTemplate>
        </xctk:BusyIndicator.BusyContentTemplate>

        <Grid
            Margin="{StaticResource MarginMedium}">

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="1*" />
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="100" />
                <ColumnDefinition
                    Width="1*" />
                <ColumnDefinition
                    Width="200" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>

            <ScrollViewer
                x:Name="SearchResultsScrollViewer"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">

                <StackPanel>

                    <views:SearchResultGroupView
                        x:Name="BestSearchResultsGroup"
                        Header="Best matches" />

                    <views:SearchResultGroupView
                        x:Name="OtherSearchResultsGroup"
                        Header="Other matches" />
                </StackPanel>
            </ScrollViewer>

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="{StaticResource MarginMedium}"
                Text="Upload:" />

            <ComboBox
                x:Name="UploadMethodsComboBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="{StaticResource MarginMedium}"
                DisplayMemberPath="UploadMethod" />

            <rui:ViewModelViewHost
                x:Name="UploadMethodHost"
                Grid.Row="1"
                Grid.Column="2"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch" />

            <ComboBox
                x:Name="SearchServicesComboBox"
                Grid.Row="1"
                Grid.Column="3"
                Margin="{StaticResource MarginMedium}">

                <ComboBox.ItemTemplate>

                    <DataTemplate>

                        <DockPanel>

                            <Image
                                DockPanel.Dock="Left"
                                Width="16"
                                Height="16"
                                Margin="0,0,4,0"
                                Source="{Binding Icon, Mode=OneWay, Converter={StaticResource BitmapToNativeConverter}}" />

                            <TextBlock
                                Text="{Binding Name, Mode=OneWay}" />
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button
                x:Name="SearchButton"
                Grid.Row="1"
                Grid.Column="4"
                Margin="{StaticResource MarginMedium}"
                Content="Search" />
        </Grid>
    </xctk:BusyIndicator>
</rui:ReactiveWindow>
