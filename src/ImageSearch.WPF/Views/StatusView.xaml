<rui:ReactiveUserControl
    x:Class="ImageSearch.WPF.Views.StatusView"
    x:TypeArguments="vm:StatusViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:ImageSearch.ViewModels;assembly=ImageSearch.Core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <StackPanel
        Orientation="Vertical">

        <TextBlock
            x:Name="StatusTextBlock"
            Margin="{StaticResource MarginMedium}"
            TextAlignment="Center"
            d:Text="Sample text" />

        <ProgressBar
            Width="160"
            Height="16"
            Margin="{StaticResource MarginMedium}"
            IsIndeterminate="True" />

        <Button
            x:Name="CancelButton"
            Margin="{StaticResource MarginMedium}"
            HorizontalAlignment="Center"
            Content="Cancel" />
    </StackPanel>
</rui:ReactiveUserControl>
