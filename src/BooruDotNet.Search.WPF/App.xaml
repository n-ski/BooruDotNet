<Application
    x:Class="BooruDotNet.Search.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Views/MainView.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary
                    Source="./Assets/Images.xaml" />

                <ResourceDictionary
                    Source="./Assets/Styles/Button.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/ItemsControl.xaml" />
                <ResourceDictionary
                    Source="./Assets/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Thickness
                x:Key="ControlMargin"
                Bottom="3"
                Left="3"
                Right="3"
                Top="3" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
