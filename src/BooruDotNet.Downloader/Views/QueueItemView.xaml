<rui:ReactiveUserControl
    x:Class="BooruDotNet.Downloader.Views.QueueItemView"
    x:TypeArguments="vm:QueueItemViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rui="http://reactiveui.net"
    xmlns:vm="clr-namespace:BooruDotNet.Downloader.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    UseLayoutRounding="True"
    mc:Ignorable="d">

    <DockPanel>

        <Image
            Name="PreviewImage"
            DockPanel.Dock="Left"
            Width="80"
            Height="80"
            RenderOptions.BitmapScalingMode="HighQuality" />

        <TextBlock
            x:Name="SourceTextBlock"
            DockPanel.Dock="Top"
            Margin="{StaticResource ControlMargin}"
            Style="{StaticResource Text14px}" />

        <TextBlock
            x:Name="FileSizeTextBlock"
            DockPanel.Dock="Top"
            Margin="{StaticResource ControlMargin}"
            Style="{StaticResource Text14px}" />
    </DockPanel>
</rui:ReactiveUserControl>
